        // Interaction: Update Architecture Details
        function showArchDetail(key) {
            const data = archData[key];
            
            // Visual feedback on diagram
            document.querySelectorAll('.diagram-box').forEach(el => el.classList.remove('active', 'border-blue-500', 'border-green-500', 'border-purple-500'));
            // Note: In a real app, we'd add the specific color class back based on key, keeping it simple here.
            
            // Update Text Content with Fade Animation
            const panel = document.getElementById('arch-info-panel');
            panel.classList.remove('animate-fade-in');
            void panel.offsetWidth; // trigger reflow
            panel.classList.add('animate-fade-in');

            document.getElementById('info-title').textContent = data.title;
            document.getElementById('info-icon').textContent = data.icon;
            document.getElementById('info-desc').textContent = data.desc;
            
            const specsList = document.getElementById('info-specs');
            specsList.innerHTML = ''; // Clear existing
            data.specs.forEach(spec => {
                const li = document.createElement('li');
                li.className = 'flex items-start';
                li.innerHTML = `<span class="mr-2 text-green-500">‚úì</span><span class="text-sm text-slate-700">${spec}</span>`;
                specsList.appendChild(li);
            });

            document.getElementById('info-progress').style.width = data.progress + '%';
            document.getElementById('info-progress').className = `h-2 rounded-full transition-all duration-500 ${data.colorClass}`;
        }

        // Interaction: Analysis Toggle
        function toggleAnalysis(type) {
            const limitBtn = document.getElementById('btn-limitations');
            const oppBtn = document.getElementById('btn-opportunities');
            const limitContent = document.getElementById('content-limitations');
            const oppContent = document.getElementById('content-opportunities');

            if (type === 'limitations') {
                limitBtn.classList.add('bg-slate-800', 'text-white', 'shadow-md');
                limitBtn.classList.remove('bg-white', 'text-slate-600', 'border', 'border-slate-300');
                
                oppBtn.classList.remove('bg-slate-800', 'text-white', 'shadow-md');
                oppBtn.classList.add('bg-white', 'text-slate-600', 'border', 'border-slate-300');

                limitContent.classList.remove('hidden');
                oppContent.classList.add('hidden');
            } else {
                oppBtn.classList.add('bg-slate-800', 'text-white', 'shadow-md');
                oppBtn.classList.remove('bg-white', 'text-slate-600', 'border', 'border-slate-300');
                
                limitBtn.classList.remove('bg-slate-800', 'text-white', 'shadow-md');
                limitBtn.classList.add('bg-white', 'text-slate-600', 'border', 'border-slate-300');

                oppContent.classList.remove('hidden');
                limitContent.classList.add('hidden');
            }
        }

        // Navigation Scroll
        function scrollToSection(id) {
            document.getElementById(id).scrollIntoView({ behavior: 'smooth' });
        }

        // Initialize Charts
        document.addEventListener('DOMContentLoaded', function() {
            // Chart 1: Latency Estimation
            const ctxLatency = document.getElementById('latencyChart').getContext('2d');
            new Chart(ctxLatency, {
                type: 'bar',
                data: {
                    labels: ['Read Hit', 'Write Hit', 'Read Miss (Mem)', 'Write Miss'],
                    datasets: [
                        {
                            label: 'Native Interface (Ideal)',
                            data: [1, 1, 2, 2],
                            backgroundColor: '#94a3b8',
                            borderRadius: 4
                        },
                        {
                            label: 'AXI-Lite Wrapper (Est)',
                            data: [2, 2, 4, 3],
                            backgroundColor: '#2563eb',
                            borderRadius: 4
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'top' },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': ' + context.raw + ' cycles';
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: { display: true, text: 'Clock Cycles' }
                        }
                    }
                }
            });

            // Chart 2: Resource Estimation
            const ctxResource = document.getElementById('resourceChart').getContext('2d');
            new Chart(ctxResource, {
                type: 'doughnut',
                data: {
                    labels: ['Zero-Riscy Core', 'AXI Wrapper logic', 'Interconnect', 'Peripherals', 'Available (Free)'],
                    datasets: [{
                        data: [35, 5, 10, 5, 45],
                        backgroundColor: [
                            '#3b82f6', // Core
                            '#60a5fa', // Wrapper
                            '#1e293b', // Bus
                            '#a855f7', // Periph
                            '#e2e8f0'  // Free
                        ],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'right' },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.label + ': ' + context.raw + '%';
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
